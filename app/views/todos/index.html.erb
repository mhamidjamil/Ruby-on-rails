<div class="container text-center">
<h1>Listing all Todos</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"> 
<p>
<%= link_to "Create a Todo", new_todo_path ,class:"btn btn-primary"%>
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.name %></td>
      <td><%= todo.description %></td>
      <td><%= link_to "Edit", edit_todo_path(todo) ,class:"btn btn-success"%></td>
      <td><%= link_to "Show", todo_path(todo) ,class:"btn btn-primary"%></td>
      <td><%= button_to "Delete", todo_path(todo), method: :delete, data: {confirm: "Are you sure?"},class:"btn btn-danger" %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Back to home page", root_path ,class:"btn btn-secondary"%>

</div>